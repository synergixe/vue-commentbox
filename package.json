{
  "name": "vue-commentbox",
  "description": "An elegant and stylable comment box for VueJS web applications",
  "version": "0.0.2",
  "files": [
    "demo/*",
    "dist/*",
    "src/*",
    "*.json",
    "*.js"
  ],
  "homepage": "https://github.com/synergixe/vue-commentbox",
  "bugs": "https://github.com/synergixe/vue-commentbox/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/synergixe/vue-commentbox.git"
  },
  "author": {
    "name": "Ifeora Okechukwu",
    "email": "isocroft@gmail.com",
    "url": "https://twitter.com/isocroft"
  },
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --inline --progress",
    "test":"cross-env NODE_ENV=test nyc mocha-webpack --webpack-config webpack.config.js --require test/setup.js test/**/*.spec.js",
    "lint:src": "eslint --ext .js,.vue src/",
    "lint:demo": "eslint --ext .js,.vue demo/",
    "lint:tests":"eslint ---ext .js tests/",
    "lint":"npm run lint:tests && npm run lint:src && npm run lint:demo",
    "lint:fix:all":"eslint --ignore-pattern '/dist/' --ignore-pattern 'webpack.config.js' --ignore-pattern '.eslintrc.js' --fix --ext .js,.vue",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js --progress --hide-modules"
  },
  "main":"./dist/vue-commentbox.js",
  "browser":"./dist/vue-commentbox.js",
  "module":"./src/index.js",
  "dependencies": {
    "cuid":"^2.1.6",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.4.0",
    "@babel/preset-env":"^7.4.2",
    "babel-loader":"^8.0.5",
    "@babel/core": "7.4.4",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "html-webpack-plugin": "^3.2.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "url-loader": "^1.1.2",
    "nyc":"^14.1.1",
    "babel-plugin-istanbul":"^5.1.4",
    "expect":"^24.8.0",
    "mocha":"^6.1.4",
    "mocha-webpack":"^1.1.0",
    "@vue/test-utils":"~1.0.0-beta.29",
    "jsdom":"^15.1.0",
    "jsdom-global":"^3.0.2",
    "eslint":"^5.16.0",
    "eslint-plugin-vue":"^5.2.2",
    "vue-hot-reload-api": "^2.3.3",
    "vue-loader": "^15.6.0",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-node-externals":"^1.7.2"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 4.0.0"
  },
  "nyc": {
    "include":[
      "src/**/*.(js|vue)" 
    ],
    "sourceMap": false,
    "instrument": false
  }
}
